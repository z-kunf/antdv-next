{
  "name": "antdv-next-workspace",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.28.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antdv-next/antdv-next.git"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "scripts": {
    "dev": "turbo dev --filter docs",
    "dev:play": "pnpm -F playground dev",
    "lint": "eslint . --fix",
    "ci:publish": "pnpm publish -r --access=public",
    "ci:lint": "eslint",
    "lint:fix": "eslint --fix",
    "bump": "pnpm changeset version",
    "build:antdv": "pnpm -F antdv-next build",
    "build:llm": "pnpm -F antdv-next run build:llm",
    "build:search": "pnpm -F docs run gen:search",
    "build:p": "run-p build:llm build:search",
    "build": "run-s build:p build:site",
    "build:site": "cross-env NODE_OPTIONS=--max-old-space-size=8192 turbo build --filter docs",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "simple-git-hooks",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "vue": "catalog:prod"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@changesets/cli": "catalog:dev",
    "@mdit-vue/plugin-frontmatter": "catalog:docs",
    "@mdit-vue/shared": "catalog:docs",
    "@testing-library/jest-dom": "catalog:dev",
    "@types/cli-progress": "catalog:types",
    "@types/fs-extra": "catalog:types",
    "@types/jsdom": "catalog:types",
    "@types/markdown-it": "catalog:types",
    "@types/node": "catalog:types",
    "@v-c/portal": "catalog:vc",
    "@v-c/resize-observer": "catalog:vc",
    "@v-c/trigger": "catalog:vc",
    "@v-c/util": "catalog:vc",
    "@vitejs/plugin-vue": "catalog:dev",
    "@vitejs/plugin-vue-jsx": "catalog:dev",
    "@vitest/coverage-v8": "catalog:",
    "@vue/test-utils": "catalog:dev",
    "@vue/tsconfig": "catalog:dev",
    "bumpp": "catalog:dev",
    "chalk": "catalog:dev",
    "cli-progress": "catalog:dev",
    "cross-env": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "fs-extra": "catalog:dev",
    "jiti": "catalog:dev",
    "jsdom": "catalog:dev",
    "lint-staged": "catalog:dev",
    "markdown-it": "catalog:docs",
    "mockdate": "catalog:dev",
    "npm-run-all": "catalog:dev",
    "picocolors": "catalog:dev",
    "pretty-format": "catalog:dev",
    "prismjs": "catalog:docs",
    "simple-git-hooks": "catalog:dev",
    "tinyglobby": "catalog:dev",
    "tsdown": "catalog:dev",
    "tsx": "catalog:dev",
    "turbo": "catalog:dev",
    "typedoc": "catalog:dev",
    "typescript": "catalog:dev",
    "vite": "catalog:dev",
    "vite-plugin-dayjs": "catalog:dev",
    "vite-plugin-inspect": "catalog:dev",
    "vite-plugin-tsx-resolve-types": "catalog:dev",
    "vitest": "catalog:dev",
    "vue-tsc": "catalog:dev"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,json}": [
      "pnpm run lint:fix"
    ]
  }
}
